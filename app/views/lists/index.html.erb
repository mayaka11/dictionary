<!--　レイアウトの調整 -->
<div class="list-wrap">
  <% @lists.each do |list| %>

    <div class="list-comment">
      <span class="list-title">・<%= link_to list.title, list_path(list.id) %></span>
      <span class="list-body"><%= list.body %></span>  <!-- list.bodyはListモデルのbodyカラムに入っているデータを呼び出している記述 -->
    </div>

  <% end %>
</div>



